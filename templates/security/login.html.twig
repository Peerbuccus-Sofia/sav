{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>


    <div class="container">    
        <div style="margin-top:200px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                <div class="panel-heading">
                    <div class="panel-title">S'identifier</div>
                    <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Mot de passe oubli&eacute; ?</a></div>
                </div>     

                <div style="padding-top:30px" class="panel-body" >
                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>  
                    {# formulaire #}
                       <form class="form-horizontal" method="post">      
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Vous &ecirc;tes connect&eacute; en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se d&eacute;connecter</a>
                            </div>
                        {% endif %}
                
                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span> 
                                <input type="email" placeholder="Email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>                                        
                            </div>
                                    
                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input type="password" placeholder="Mot de passe" name="password" id="inputPassword" class="form-control" required>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            </div>
                            <div class="input-group">
                                <div class="checkbox">
                                    <input id="login-remember" type="checkbox" name="_remember_me" value="1">Se souvenir de moi</label>
                                </div>
                            </div>
                            

                                    {# button  #}
                            <div style="margin-top:20px" class="form-group">
                                <div class="col-sm-8 controls"></div>
                                <div class="col-sm-4 controls">
                                    <button type="submit" id="btn-login" class="btn btn-success">Se connecter</button>
                                </div>
                            </div>
                        </form>     
                    </div>                     
                </div>  
            </div>
        </div> 
    </div>




{% endblock %}
